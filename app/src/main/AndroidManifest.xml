<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.project">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Project">
        <activity android:name=".userpanel.userNotifications.UserNotification" android:label="Notifications"></activity>
        <activity
            android:name=".teacherPanel.Notifications.Notifications"
            android:label="Notifications" />
        <activity
            android:name=".userpanel.UserUpload.upload"
            android:label="Upload Your Answer" />
        <activity
            android:name=".adminPanel.addTeachers"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".adminPanel.adminDashboard"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".teacherPanel.EditPost.editAssignmentQuiz"
            android:label="Edit Quiz/Assignment" />
        <activity
            android:name=".teacherPanel.ViewPost.view"
            android:label="Your Posts"
