        <activity
            android:name=".userpanel.userdashboard"
            android:theme="@style/Theme.AppCompat.NoActionBar"></activity>
        <activity
            android:name=".teacherPanel.post.PostAssignmentQuiz"
            android:label="Post Quiz/Assognment"></activity>
        <activity
            android:name=".teacherPanel.dashboard"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".loginsignin.emailAuthentication"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".loginsignin.Signup"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".loginsignin.Login"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>