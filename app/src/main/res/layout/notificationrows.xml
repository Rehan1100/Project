<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="198dp"
    android:layout_marginTop="1dp"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/click"
        android:layout_width="match_parent"
        android:layout_height="197dp"
        android:background="@color/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="188dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:backgroundTint="@color/white">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ProductImage"
                android:layout_width="114dp"
                android:layout_height="118dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="6dp"
                android:background="@color/background"
                android:src="@drawable/logo"
                app:civ_border_color="@color/white"
                app:civ_border_width="3dp">

            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="121dp"
                android:layout_marginLeft="251dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="2dp"
                android:background="@color/white"
                android:fontFamily="@font/baloo_bhai"
                android:paddingLeft="2dp"
                android:text="Course Name"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/type"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="241dp"
                android:layout_marginLeft="251dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="2dp"
                android:background="@color/white"
                android:fontFamily="@font/baloo_bhai"
                android:paddingLeft="2dp"
                android:textColor="@color/Red"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="121dp"
                android:layout_marginLeft="251dp"
                android:layout_marginTop="27dp"
                android:layout_marginRight="2dp"
                android:background="@color/white"
                android:paddingLeft="2dp"
                android:textColor="@color/black"
                android:textSize="24dp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginStart="121dp"
                android:layout_marginLeft="251dp"
                android:layout_marginTop="62dp"
                android:background="@color/background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/click"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="121dp"
                android:layout_marginLeft="251dp"
                android:layout_marginTop="70dp"
                android:layout_marginRight="2dp"
                android:background="@color/white"
                android:fontFamily="@font/baloo_bhai"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:text="Student Detail"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/nametv"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="121dp"
                android:layout_marginLeft="251dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="2dp"
                android:background="@color/white"
                android:fontFamily="sans-serif-black"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:text="Name:"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/nametv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="221dp"
                android:layout_marginLeft="251dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="2dp"
                android:background="@color/white"
                android:fontFamily="sans-serif-black"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:text="name"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/semestertv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="121dp"
                android:layout_marginLeft="251dp"
                android:layout_marginTop="128dp"
                android:layout_marginRight="2dp"
                android:background="@color/white"
                android:fontFamily="sans-serif-black"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:text="Semester:"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/semestertv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="221dp"
                android:layout_marginLeft="251dp"
                android:layout_marginTop="128dp"
                android:layout_marginRight="2dp"
                android:background="@color/white"
                android:fontFamily="sans-serif-black"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:text="semester"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/emailtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="121dp"
                android:layout_marginLeft="251dp"
                android:layout_marginTop="155dp"
                android:layout_marginRight="2dp"
                android:background="@color/white"
                android:fontFamily="sans-serif-black"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:text="Email:"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/emailtv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="221dp"
                android:layout_marginLeft="251dp"
                android:layout_marginTop="155dp"
                android:layout_marginRight="2dp"
                android:background="@color/white"
                android:fontFamily="sans-serif-black"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:text="email"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="normal" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/click"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>
